<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/routine_origem"
            android:text="Santarem"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="24"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/routine_destino"
            android:text="Lisboa"
            android:layout_toRightOf="@id/routine_origem"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="24"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />
        <TextView
            android:id="@+id/routine_hora"
            android:padding="10dp"
            android:text="22:30"
            android:layout_toRightOf="@id/routine_destino"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="18"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/routine_dias"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/routine_hora"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Qui,sex,sab"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:focusable="false"/>

    </LinearLayout>

</android.support.v7.widget.CardView>