<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".escolherLugares"
    android:orientation="vertical"
    android:weightSum="10">

    <!-- Escolha de Carruagem -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/l_blue"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/carruagem_previous"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:onClick="changeCart"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />
        <TextView
            android:id="@+id/cartNumber"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Carruagem 1"
            android:textColor="@android:color/black"
            android:textSize="26sp" />
        <ImageView
            android:id="@+id/carruagem_next"
            android:onClick="changeCart"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    </LinearLayout>

    <LinearLayout
